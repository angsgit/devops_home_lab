pipeline {
    agent any

    environment {
        AWS_REGION = "eu-west-1"
        AWS_CREDENTIALS = credentials('aws-creds')   // Your AWS creds ID in Jenkins
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/angsgit/devops_home_lab.git'
            }
        }

        stage('Terraform Destroy') {
            steps {
                dir('IaC/terraform') {
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
                        sh '''
                            echo "‚ö†Ô∏è Initializing Terraform backend..."
                            terraform init
                            echo "üî• Destroying all AWS resources..."
                            terraform destroy -auto-approve
                        '''
                    }
                }
            }
        }

        stage('Cleanup Local Terraform Files') {
            steps {
                dir('IaC/terraform') {
                    sh '''
                        echo "üßπ Cleaning up local Terraform state files..."
                        rm -f terraform.tfstate terraform.tfstate.backup
                        rm -rf .terraform .terraform.lock.hcl
                    '''
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ AWS infrastructure destroyed and local state cleaned up.'
        }
        failure {
            echo '‚ùå Terraform destroy failed ‚Äî check the console output.'
        }
    }
}
